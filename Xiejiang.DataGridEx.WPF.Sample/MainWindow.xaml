<Window
    x:Class="Xiejiang.DataGridEx.WPF.Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Xiejiang.DataGridEx.WPF.Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Xiejiang.DataGridEx.WPF;assembly=Xiejiang.DataGridEx.WPF"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:DemoViewModel}"
    mc:Ignorable="d">
    <Grid>
        <wpf:DataGridEx ItemsSource="{Binding Path=DemoList}" />
    </Grid>
</Window>
