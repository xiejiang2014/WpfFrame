<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dataGrid="clr-namespace:WpfFrame.DataGrid"
    xmlns:wpfFrame="clr-namespace:WpfFrame">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WpfFrame;component/Styles/Controls.xaml" />
        <ResourceDictionary Source="/WpfFrame;component/Styles/CustomizeWithButtonMessageBoxStyles.xaml" />
        <ResourceDictionary Source="/WpfFrame;component/Styles/TextMessageBoxStyles.xaml" />
        <ResourceDictionary Source="/WpfFrame;component/Styles/WaitingBoxStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <!--  控件默认样式  -->
    <Style
        BasedOn="{StaticResource {x:Type TextBox}}"
        TargetType="wpfFrame:FilterBox" />
    <Style
        BasedOn="{StaticResource {x:Type DataGrid}}"
        TargetType="dataGrid:DataGridEx" />
    <Style
        BasedOn="{StaticResource {x:Type ComboBox}}"
        TargetType="wpfFrame:FilterComboBox" />


</ResourceDictionary>